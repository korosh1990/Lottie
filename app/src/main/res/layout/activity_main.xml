<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.androidlife.lottie.MainActivity">


    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="19sp"
        android:textColor="@android:color/black"
        android:text="@string/rocket_button" />

    <Button
        android:id="@+id/button2"
        android:layout_below="@id/button1"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="19sp"
        android:textColor="@android:color/black"
        android:text="@string/sky_button" />

    <Button
        android:id="@+id/button3"
        android:layout_below="@id/button2"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="19sp"
        android:textColor="@android:color/black"
        android:text="@string/fire_button" />


    <Button
        android:id="@+id/button4"
        android:layout_below="@id/button3"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="19sp"
        android:textColor="@android:color/black"
        android:text="@string/telegram_button" />

    <TextView
        android:id="@+id/textView"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/androidlife"
        android:textSize="21sp"
        android:textColor="@android:color/holo_green_dark" />


</RelativeLayout>
